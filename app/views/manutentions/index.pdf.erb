        <td><%=formato_data(manutention.data_manutencao) %></td>
        <td><%= manutention.usuario_manutencao %></td>
        <td><%= manutention.fornecedor %></td>
        <td><%= manutention.tipo_servico.servico%></td>
      <th colspan="4"></th>
    </tr>
    <% end %>
      
  </table>  
